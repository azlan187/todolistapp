<p id="notice"><%= notice %></p>

<h1>THINGS TO DO</h1>

<%= link_to 'New Task', new_task_path, class: "btn  btn-link" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Settings</th>
      <th>Importance</th>
      <th>Urgency</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <!-- dropdown button -->
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Edit', edit_task_path(task) %></li>
              <li><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
        <td><%= task.importance %></td>
        <td><%= task.urgency %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
